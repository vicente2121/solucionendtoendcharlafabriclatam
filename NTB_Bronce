# ParÃ¡metros inyectados por el pipeline (no los declares manualmente en Fabric)
# p_run_date = ...
# p_force_reingest = ...

# Ruta base esperada (sin /lakehouse ni /root)
base_path = f"Files/bronze/cryptos/{p_run_date}/"

# Verifica si la carpeta existe en OneLake
def carpeta_existe(path):
    try:
        mssparkutils.fs.ls(path)
        return True
    except:
        return False

# LÃ³gica principal
if carpeta_existe(base_path):
    if not p_force_reingest:
        print(f"â›” ERROR: La carpeta '{base_path}' ya existe.")
        raise Exception(f"âŒ Abortando: snapshot para '{p_run_date}' ya fue procesado. Usa p_force_reingest=true para reprocesar.")
    else:
        print(f"âš ï¸ Carpeta '{base_path}' existe pero serÃ¡ eliminada (p_force_reingest = true).")
        mssparkutils.fs.rm(base_path, True)
        print("ğŸ—‘ï¸ Carpeta eliminada. Continuamos.")
else:
    print(f"âœ… OK: La carpeta '{base_path}' no existe. Continuamos con la ingesta.")
